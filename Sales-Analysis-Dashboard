    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>
        // Wait for DOM content to be fully loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Tab Navigation
            document.getElementById('product-analysis-btn').addEventListener('click', function() {
                document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
                this.classList.add('active');
                document.getElementById('product-analysis').classList.add('active');
            });

            document.getElementById('sales-analysis-btn').addEventListener('click', function() {
                document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
                this.classList.add('active');
                document.getElementById('sales-analysis').classList.add('active');
            });

            document.getElementById('customer-analysis-btn').addEventListener('click', function() {
                document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
                this.classList.add('active');
                document.getElementById('customer-analysis').classList.add('active');
            });
            
            // Chart configurations
            const chartColors = [
                '#FF9900', '#146EB4', '#2CA469', '#D75615', '#743EBD', 
                '#F5B041', '#3498DB', '#2ECC71', '#E74C3C', '#9B59B6'
            ];
            
            // PRODUCT ANALYSIS CHARTS
            // Category Distribution Chart
            const categoryDistributionCtx = document.getElementById('categoryDistributionChart').getContext('2d');
            const categoryDistributionChart = new Chart(categoryDistributionCtx, {
                type: 'pie',
                data: {
                    labels: ['Electronics', 'Fashion', 'Home & Kitchen', 'Books', 'Beauty', 'Others'],
                    datasets: [{
                        data: [25, 18, 15, 12, 10, 20],
                        backgroundColor: chartColors,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right'
                        }
                    }
                }
            });
            
            // Rating by Category Chart
            const ratingByCategoryCtx = document.getElementById('ratingByCategoryChart').getContext('2d');
            const ratingByCategoryChart = new Chart(ratingByCategoryCtx, {
                type: 'bar',
                data: {
                    labels: ['Electronics', 'Fashion', 'Home & Kitchen', 'Books', 'Beauty', 'Others'],
                    datasets: [{
                        label: 'Average Rating',
                        data: [4.3, 4.1, 4.5, 4.7, 4.2, 3.9],
                        backgroundColor: chartColors[0],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 5
                        }
                    }
                }
            });
            
            // Discount by Category Chart
            const discountByCategoryCtx = document.getElementById('discountByCategoryChart').getContext('2d');
            const discountByCategoryChart = new Chart(discountByCategoryCtx, {
                type: 'bar',
                data: {
                    labels: ['Electronics', 'Fashion', 'Home & Kitchen', 'Books', 'Beauty', 'Others'],
                    datasets: [{
                        label: 'Average Discount %',
                        data: [25.3, 35.2, 20.1, 15.7, 30.2, 22.5],
                        backgroundColor: chartColors[1],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            
            // Price Tier Chart
            const priceTierCtx = document.getElementById('priceTierChart').getContext('2d');
            const priceTierChart = new Chart(priceTierCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Budget (< ₹1000)', 'Standard (₹1000-₹3000)', 'Premium (> ₹3000)'],
                    datasets: [{
                        data: [45, 35, 20],
                        backgroundColor: [chartColors[2], chartColors[3], chartColors[4]],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            
            // SALES ANALYSIS CHARTS
            // Revenue by Month Chart
            const revenueByMonthCtx = document.getElementById('revenueByMonthChart').getContext('2d');
            const revenueByMonthChart = new Chart(revenueByMonthCtx, {
                type: 'line',
                data: {
                    labels: ['January', 'February', 'March', 'April'],
                    datasets: [{
                        label: 'Revenue (₹ Millions)',
                        data: [9.2, 7.5, 8.3, 7.5],
                        backgroundColor: 'rgba(255, 153, 0, 0.2)',
                        borderColor: chartColors[0],
                        borderWidth: 2,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            
            // Revenue by City Chart
            const revenueByCityCtx = document.getElementById('revenueByCityChart').getContext('2d');
            const revenueByCityChart = new Chart(revenueByCityCtx, {
                type: 'bar',
                data: {
                    labels: ['Mumbai-A', 'Delhi-B', 'Bangalore-C', 'Chennai-A', 'Hyderabad-B'],
                    datasets: [{
                        label: 'Revenue (₹ Millions)',
                        data: [7.2, 6.5, 8.3, 5.8, 4.7],
                        backgroundColor: chartColors[1],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            
            // Sales by Time Chart
            const salesByTimeCtx = document.getElementById('salesByTimeChart').getContext('2d');
            const salesByTimeChart = new Chart(salesByTimeCtx, {
                type: 'bar',
                data: {
                    labels: ['Morning', 'Afternoon', 'Evening', 'Night'],
                    datasets: [{
                        label: 'Units Sold',
                        data: [3200, 5100, 4500, 2620],
                        backgroundColor: chartColors[2],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            
            // Sales by Day Chart
            const salesByDayCtx = document.getElementById('salesByDayChart').getContext('2d');
            const salesByDayChart = new Chart(salesByDayCtx, {
                type: 'bar',
                data: {
                    labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
                    datasets: [{
                        label: 'Units Sold',
                        data: [1800, 2100, 2200, 2300, 2500, 2700, 1820],
                        backgroundColor: chartColors[3],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            
            // CUSTOMER ANALYSIS CHARTS
            // Revenue by Gender Chart
            const revenueByGenderCtx = document.getElementById('revenueByGenderChart').getContext('2d');
            const revenueByGenderChart = new Chart(revenueByGenderCtx, {
                type: 'pie',
                data: {
                    labels: ['Female', 'Male'],
                    datasets: [{
                        data: [17.5, 15.0],
                        backgroundColor: [chartColors[4], chartColors[5]],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right'
                        }
                    }
                }
            });
            
            // Revenue by Customer Type Chart
            const revenueByCustomerTypeCtx = document.getElementById('revenueByCustomerTypeChart').getContext('2d');
